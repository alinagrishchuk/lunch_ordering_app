.modal.fade.bs-example-modal-lg.in{:role => "dialog", :style => "display: block; padding-right: 15px;"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myLargeModalLabel.title-text.modal-title="Menu, #{params[:date]}"
      .modal-body
        %table.table.table-bordered.table-striped.table-hover
          %thead
            %tr
              %th Product
              %th Course type
              %th Price
          %tbody
            - @menus.each do |menu|
              %tr
                %td= menu.product.name
                %td= menu.product.course_type
                %td= menu.price
